{
  "name": "azure-pipelines-views-terraform-plan",
  "version": "1.0.0",
  "description": "Azure Pipelines view to render terraform plans",
  "main": ".dist/index.js",
  "scripts": {
    "clean": "rimraf .bin",
    "test": "jest",
    "build": "npm run clean && webpack",
    "start": "webpack serve --env test --mode development",
    "start:alpha": "webpack serve --https --mode development",
    "pack": "rimraf .dist && copyfiles -f \".bin/**/*\" .dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/charleszipp/azure-pipelines-tasks-terraform.git"
  },
  "keywords": [
    "terraform",
    "azure-devops",
    "azure-pipelines"
  ],
  "author": "Charles Zipp, Zachary Nawar, Alex Goncharov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/charleszipp/azure-pipelines-tasks-terraform/issues"
  },
  "homepage": "https://github.com/charleszipp/azure-pipelines-tasks-terraform#readme",
  "dependencies": {
    "azure-devops-extension-api": "^1.158.0",
    "azure-devops-extension-sdk": "^2.0.7",
    "azure-devops-ui": "^1.152.2",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "url-parse": "^1.5.1"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^14.14.25",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/url-parse": "^1.4.3",
    "@typescript-eslint/eslint-plugin": "^1.9.0",
    "@typescript-eslint/parser": "^1.9.0",
    "@webpack-cli/serve": "^1.3.0",
    "ansi_up": "^5.0.0",
    "base64-inline-loader": "^2.0.1",
    "copy-webpack-plugin": "^8.1.0",
    "copyfiles": "^2.4.1",
    "css-loader": "^2.1.1",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "file-loader": "^3.0.1",
    "jest": "^27.3.1",
    "jest-junit": "^13.0.0",
    "node-sass": "^6.0.1",
    "prettier": "^2.4.1",
    "rimraf": "^2.6.3",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.1.3",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.4.0"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(js|ts|tsx|jsx)$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|azure-devops-ui|azure-devops-extension-sdk)/)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/.tests/coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "testEnvironment": "jsdom"
  },
  "jest-junit": {
    "outputDirectory": ".tests",
    "outputName": "results.xml"
  }
}
