{
  "name": "azure-pipelines-views-terraform-plan",
  "version": "1.0.0",
  "description": "Azure Pipelines view to render terraform plans",
  "main": ".dist/index.js",
  "scripts": {
    "clean": "rimraf .bin",
    "test": "jest",
    "build": "npm run clean && webpack",
    "start": "webpack serve --env test --mode development",
    "start:alpha": "webpack serve --https --mode development",
    "pack": "rimraf .dist && copyfiles -f \".bin/**/*\" .dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jason-johnson/azure-pipelines-tasks-terraform.git"
  },
  "keywords": [
    "terraform",
    "azure-devops",
    "azure-pipelines"
  ],
  "author": "Charles Zipp, Zachary Nawar, Alex Goncharov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jason-johnson/azure-pipelines-tasks-terraform/issues"
  },
  "homepage": "https://github.com/jason-johnson/azure-pipelines-tasks-terraform#readme",
  "dependencies": {
    "azure-devops-extension-api": "^4.246.0",
    "azure-devops-extension-sdk": "^4.0.2",
    "azure-devops-ui": "^2.246.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "url-parse": "^1.5.10"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/node": "^22.10.1",
    "@types/react": "^16.8.18",
    "@types/react-dom": "^16.8.4",
    "@types/url-parse": "^1.4.3",
    "@webpack-cli/serve": "^2.0.5",
    "ansi_up": "^5.0.0",
    "base64-inline-loader": "^2.0.1",
    "copy-webpack-plugin": "^12.0.2",
    "copyfiles": "^2.4.1",
    "css-loader": "^7.1.2",
    "file-loader": "^6.2.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-junit": "^16.0.0",
    "rimraf": "^6.0.1",
    "sass-loader": "^16.0.3",
    "style-loader": "^4.0.0",
    "ts-jest": "^29.0.4",
    "ts-loader": "^9.2.6",
    "typescript": "^5.7.2",
    "webpack": "^5.105.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.2.1"
  },
  "jest": {
    "verbose": true,
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.[tj]sx?$": [
        "ts-jest",
        {
          "tsconfig": {
            "allowJs": true
          }
        }
      ]
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|azure-devops-ui|azure-devops-extension-sdk)/)"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "<rootDir>/src/__mocks__/styleMock.js"
    },
    "collectCoverage": true,
    "coverageDirectory": "<rootDir>/.tests/coverage",
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "cobertura"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "testEnvironment": "jsdom"
  },
  "jest-junit": {
    "outputDirectory": ".tests",
    "outputName": "results.xml"
  }
}
