{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "sourceMap": false,
      "strict": true,
      "outDir": ".bin",    
      "typeRoots": [
        "node_modules/@types"
      ],
      "types": [
        "node", 
        "chai"
      ],
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
    },
    "exclude": [
      "node_modules"
    ]
  }