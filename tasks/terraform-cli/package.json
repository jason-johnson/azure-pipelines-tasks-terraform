{
  "name": "azure-pipelines-tasks-terraform-cli",
  "version": "1.0.0",
  "description": "Azure Pipelines task to execute terraform cli commands",
  "main": ".bin/index.js",
  "scripts": {
    "build": "tsc --build",
    "test": "cucumber-js -p default",
    "test:coverage": "nyc -r cobertura -r html \"cucumber-js\" \"-p\" \"default\"",
    "test:report": "mkdir -p .tests && cucumber-js -p report | grep -Ev '^##vso|^\\[command]|^[a-zA-Z0-9]' | cucumber-junit > ./.tests/results.xml",
    "start": "ts-node -r dotenv/config ./src/index.ts",
    "pack": "copyfiles package.json task.json icon.png \".bin/*.js\" \".bin/**/*.js\" -e \".bin/tests/*\" .dist && cd .dist && npm install --only=prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jason-johnson/azure-pipelines-tasks-terraform.git"
  },
  "keywords": [
    "terraform",
    "azure-devops",
    "azure-pipelines"
  ],
  "author": "Charles Zipp",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jason-johnson/azure-pipelines-tasks-terraform/issues"
  },
  "homepage": "https://github.com/jason-johnson/azure-pipelines-tasks-terraform#readme",
  "dependencies": {
    "applicationinsights": "^1.8.8",
    "azure-devops-node-api": "^12.0.0",
    "azure-pipelines-task-lib": "^4.6.1",
    "azure-pipelines-tasks-azure-arm-rest": "3.249.0",
    "dotenv": "^8.2.0",
    "intercept-stdout": "^0.1.2",
    "mock-require": "^3.0.3",
    "q": "^1.5.1",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^7.3.1",
    "@cucumber/pretty-formatter": "^1.0.0-alpha.1",
    "@types/chai": "^4.2.14",
    "@types/chai-arrays": "^2.0.0",
    "@types/intercept-stdout": "^0.1.0",
    "@types/mock-require": "^2.0.0",
    "@types/node": "^14.14.6",
    "@types/q": "^1.5.4",
    "chai": "^4.2.0",
    "chai-arrays": "^2.2.0",
    "copyfiles": "^2.4.0",
    "cucumber-junit": "^1.7.1",
    "cucumber-tsflow": "^4.0.0-rc.1",
    "nyc": "^15.1.0",
    "tfx-cli": "^0.16.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.0.5"
  }
}
